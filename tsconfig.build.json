{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": [
    "server.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "src/public",
    "public",
    "node_modules"
  ]
}
{
  "name": "vocab-trainer",
  "author": "CodeBeard",
  "version": "3.0.0",
  "description": "Ein spielerischer Vokabeltrainer mit Express-Backend und Konfetti.",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build:backend": "tsc -p tsconfig.build.json",
    "build:frontend": "vite build",
    "inject-version": "node scripts/inject-version.js",
    "build": "npm run build:backend && npm run build:frontend && npm run inject-version",
    "start": "node dist/server.js",
    "init-db": "npm run build:backend && node dist/init-db.js",
    "deploy": "npm run build && node dist/init-db.js && node dist/server.js",
    "dev:backend": "tsc -w -p tsconfig.json",
    "dev:frontend": "vite",
    "dev": "concurrently --kill-others-on-fail \"npm:dev:backend\" \"npm:dev:frontend\"",
    "lint": "eslint \"**/*.ts\" --ext .ts",
    "lint:fix": "eslint \"**/*.ts\" --ext .ts --fix",
  "test": "VITEST_TSCONFIG=tsconfig.test.json vitest run",
  "test:watch": "VITEST_TSCONFIG=tsconfig.test.json vitest --watch",
  "test:ui": "VITEST_TSCONFIG=tsconfig.test.json vitest"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7",
    "vite": "^7.1.11",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.37.0",
    "supertest": "^6.3.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
